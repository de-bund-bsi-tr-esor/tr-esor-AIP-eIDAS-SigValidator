	<!-- =================== -->
	<!-- Definition of types -->
	<!-- (only include XSDs) -->
	<!-- =================== -->
 
	<wsdl:types>
		<xsd:schema targetNamespace="http://www.bsi.bund.de/tr-esor/api/1.2"
			xmlns:xsd="http://www.w3.org/2001/XMLSchema"
			xmlns:xaip="http://www.bsi.bund.de/tr-esor/xaip/1.2"
